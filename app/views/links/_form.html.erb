<%= form_with(model: @link, local: true) do |form| %>
  <div>
    <%= form.label "Source", class: "label" %>
    <%= form.text_field :source, class: "input" %>
  </div>
  <div>
    <%= form.label "Url", class: "label" %>
    <%= form.text_field :url, class: "input" %>
  </div>
          <%= form.select(:product_id,
            options_from_collection_for_select(
              Product.order(:title),
              :id,
              :title,
              @link.product_id,
            ),
            {prompt: "--select a product--"}
          )
        %>
  <div class="buttons">
    <%= form.submit "Save", disable_with: 'Submiting...' %>
    <%= link_to "Cancel", links_path() %>
  </div>
<% end %>
