<h2>Link Lisitng</h2>
<%= link_to 'New', new_link_path %>
<table>
  <tr>
    <th>Id</th>
    <th>Source</th>
    <th>Url</th>
    <th>Product</th>
    <th>Created At</th>
    <th>Actions</th>
  </tr>
  <% @links.each do |link| %>
    <tr>
      <td><%= link.id %></td>
      <td><%= link.source %></td>
      <td><%= link.url %></td>
      <td><%= link.product.title %></td>
      <td><%= link.created_at.strftime("%FT%T") %></td>
      <td>
        <div>
          <%= link_to "Edit", edit_link_path(link) %>
          <%= link_to "Delete", link_path(link), method: :delete, onclick: "return confirm('Are you going to delete [#{link.source}] ?')" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
