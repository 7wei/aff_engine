<h2>Product Lisitng</h2>
<%= link_to 'New', new_product_path %>
<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Description</th>
    <th>Links</th>
    <th>Created At</th>
    <th>Actions</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.id %></td>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <th>
        <ul>
          <% product.links.each do |link| %>
            <li><%= link.url %>(<%= link.source %>)<li>
          <% end %>
        </ul>
      </th>
      <td><%= product.created_at.strftime("%FT%T") %></td>
      <td>
        <div>
          <%= link_to "Edit", edit_product_path(product) %>
          <%= link_to "Delete", product_path(product), method: :delete, onclick: "return confirm('Are you going to delete [#{product.title}] ?')" %>
        </div>
      </td>
    </tr>
  <% end %>
</table>
